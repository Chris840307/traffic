        <th width="26%" height="15" nowrap>路段</th>
        <th width="51%" height="15" nowrap>操作</th>
      </tr>
	<%             
	for I=1 to Rs.pagesize   
	%>        
      <tr bgcolor="#FFFFFF" onMouseOver="this.className='listtitle2'" onMouseOut="this.className='listtitle1'">
