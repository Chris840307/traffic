           <!-- <input type="button" value="刪除" onclick="delStreet('Street_mdy.asp?tag=del&StreetID= --><%
		   'response.write rs("StreetID")
		   %><!-- ');"  --><%
		   'response.write ReturnPermission(CheckPermission(226,4))
		   %><!-- > -->
        </td>
      </tr>
	<%              
		Rs.Movenext              
		If Rs.EOF then exit for              
	next              
	%>              
         </table>
     </td>
