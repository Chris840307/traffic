codebase="..\smsx.cab#Version=6,1,432,1">
</object>
<%
strCity="select value from Apconfigure where id=31"
set rsCity=conn.execute(strCity)
sys_City=trim(rsCity("value"))
rsCity.close
If not ifnull(Request("PasserNo")) Then
	UOpenGovNumber=trim(Request("PasserNo"))
else
	UOpenGovNumber="　　　　　"
End if
UJudeDate=split(gArrDT(Request("PasserDate")),"-")
UBigUnitBossName=trim(Request("Boss"))
USubUnitSecBossName=trim(Request("SubBoss"))
DB_UnitName=Request("ArrUnitName")
UForFeit=trim(Request("PasserPay"))
UPunishmentMainBody=request("Rule1txt")&".罰鍰新臺幣"&to_Money(trim(UForFeit))&_
"元整.(限於接到裁決書之翌日起35日內繳納。)"

USimpleReson="受處分人於上開時間、地點，因違反道路交通管理事件被"&DB_UnitName&_
"所查獲移送本分局處理，因未依通知日期到案者依『道路交通管理處罰條例』裁決如處罰主文。"

PrintDate=split(gArrDT(date),"-")

If not ifnull(Request("DriverID")) Then
	If Mid(Trim(Request("DriverID")),2,1)="1" Then
		UAgentSex="男"
	elseif Mid(Trim(Request("DriverID")),2,1)="2" Then
		UAgentSex="女"
	End if
End if

DB_UnitTel=trim(Request("UnitTEL"))
Bank_BankName=trim(Request("UnitAccountName"))
bank_BankAccount=trim(Request("UnitAccount"))
DutyAddress=trim(Request("UnitAddress"))

for j=1 to len(trim(DB_UnitName))
	if j<>1 then thenPasserUnit=thenPasserUnit
	thenPasserUnit=thenPasserUnit&Mid(trim(DB_UnitName),j,1)
next

strUInfo="select * from Apconfigure where ID=35"
set rsUInfo=conn.execute(strUInfo)
if not rsUInfo.eof then
	for j=1 to len(trim(rsUInfo("value")))
		if j<>1 then thenPasserCity=thenPasserCity
		thenPasserCity=thenPasserCity&Mid(trim(rsUInfo("value")),j,1)
		PasserCity=PasserCity&Mid(trim(rsUInfo("value")),j,1)
	next
end if
rsUInfo.close

%>
<table width="95%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td nowrap><div align="center" class="style14"><%=thenPasserCity%><%=thenPasserUnit%></div></td>
  </tr>
  <tr valign="bottom">
    <td><div align="center" class="style14">違反道路交通管理事件裁決書</div></td>
  </tr>
  <tr>
    <td><div class="style13">　　　　　　　　中　華　民　國　<%="　"&UJudeDate(0)&"年　"&UJudeDate(1)&"月　"&UJudeDate(2)&"日"%>　　<%=BillPageUnit&"交裁字第"&UOpenGovNumber&"號"%></div></td>
  </tr>
</table>
<table width="95%" height="50%" border="1" cellspacing=0 cellpadding=3>
  <tr>
    <td width="98" nowrap><span class="style13">受處分人<br>姓　　名</span></td>
    <td><span class="style13"><%=trim(request("DRIVER"))%></span></td>
    <td nowrap><span class="style13">舉發通知單<br>編　　　號</span></td>
    <td><span class="style13">第<%=trim(request("BillNo"))%>號</span></td>
	<td rowspan="3" width="250" align="center" valign="top"><span class="style13">承辦人：<br><%
		If sys_City<>"澎湖縣" and sys_City<>"高雄縣" and sys_City<>"嘉義市" Then
			'南投竹山分局
			'南投竹山分局  從這邊可以設定 操作者與承辦人不同人
			if Session("Unit_ID") = "05FG" then 
				response.write "蘇永信"
			elseIf sys_City<>"台南市" and Session("Unit_ID") <> "F000" Then
				response.write request("operat")
			end if
		end if%></span></td>
  </tr>
  <tr>
    <td><span class="style13">地址</span></td>
	<td colspan=3><span class="style13"><%=trim(rsSql("DriverZip"))&trim(request("DriverAddress"))%>&nbsp;</span></td>
  </tr>
  <tr>
	<td nowrap><span class="style13">身分證字號</span></td>
    <td><span class="style13"><%=trim(request("DriverID"))%></span></td>
    <td nowrap><span class="style13">出生日期</span></td>
    <td><span class="style13"><%=gInitDT(trim(request("DriverBirth")))%>&nbsp;</span></td>
  </tr>
  <tr>
    <td><span class="style13">法定代理人<br>姓　　名</span></td>
	<td colspan=3><span class="style13">&nbsp;</span></td>
	<td rowspan="2" width="250" align="center" valign="top"><span class="style13"><%
		If sys_City<>"嘉義市" Then
			if Session("Unit_ID") = "05FG" then
				response.write "分局長代行："
			elseif sys_City = "高雄縣" then
				response.write "組長："
			else
				response.write "單位主官："
			end if
			response.write "<BR>"
			If sys_City<>"澎湖縣" Then
				response.write UBigUnitBossName
			end if
		end if
		%>&nbsp;</span></td>
  </tr>
  <tr>
		<td><span class="style13">法定代理人<br>地　　址</span></td>
		<td colspan=3><span class="style13">&nbsp;</span></td>
  </tr>
  <tr>
	<td nowrap><span class="style13">違規日期</span></td>
    <td nowrap><span class="style13">
      <%
		if trim(request("IllegalDate"))<>"" then
			IllegalDate=split(gArrDT(request("IllegalDate")),"-")
			response.write "　"&IllegalDate(0)&"年　"&IllegalDate(1)&"月　"&IllegalDate(2)&"日"
		end if%>
	</span></td>
	<td nowrap><span class="style13">違規時間</span></td>
    <td><span class="style13">
      <%
		if trim(request("IllegalDate"))<>"" then
			IllegalDate=split(gArrDT(request("IllegalDate")),"-")
			response.write "　"&hour(request("IllegalDate"))&"時　"&minute(request("IllegalDate"))&"分　"
		end if%>
	</span></td>
	 <td rowspan="5" width="250" align="center" valign="top"><span class="style13"><%
		If sys_City<>"澎湖縣" and sys_City<>"嘉義市" Then
			if Session("Unit_ID") <> "05FG" and Session("Unit_ID") <> "F000" then
				If sys_City<>"宜蘭縣"  and sys_City<>"台南市" and sys_City<>"台南縣" and sys_City<>"花蓮縣" then
					If sys_City<>"嘉義縣" and sys_City<>"高雄縣" then
						response.write "局長："&left(UBigUnitBossName&"　　　　　　　　　　",10)
					else
						response.write "分局長："&left(USubUnitSecBossName&"　　　　　　　　　　",10)
					end if
				end if
			end if
		else
			response.write "分局長："&left("　　　　　　　　　　",10)
		end if%>&nbsp;</span>
	</td>	
  </tr>
  <tr>
	<td nowrap><span class="style13">違規地點</span></td>
    <td colspan=3><span class="style13"><%=trim(request("IllegalAddress"))%></span></td>
  </tr>
  <tr>
	<td><span class="style13">應到案日期</span></td>
    <td colspan="3"><span class="style13">
      <%
		if trim(request("DealLineDate"))<>"" then
			DealLineDate=split(gArrDT(request("DealLineDate")),"-")
			response.write "　"&DealLineDate(0)&"年　"&DealLineDate(1)&"月　"&DealLineDate(2)&"日前"
		end if%>
    &nbsp;</span></td>
  </tr>
  <tr>
	<td><span class="style13">違反法條</span></td>
    <td colspan="3"><span class="style13">
		道路交通管理處罰條例<%
		Sys_Rule1=trim(request("Rule1"))
		response.write "第"&left(trim(Sys_Rule1),2)&"條"
		if len(trim(Sys_Rule1))>7 then response.write "之"&right(trim(Sys_Rule1),1)
		response.write "第"&Mid(trim(Sys_Rule1),3,1)&"項第"&Mid(trim(Sys_Rule1),4,2)&"款規定"
		%>
    &nbsp;</span></td>
  </tr>
  <tr>
    <td nowrap><span class="style13">違規事實</span></td>
    <td colspan="3"><span class="style13">
      <%
		response.write trim(request("Rule1txt"))

		if not ifnull(request("Rule2")) then
			response.write "<br>"&trim(request("Rule2txt"))
		end if
		
		if not ifnull(request("Rule3")) then
			response.write "<br>"&trim(request("Rule3txt"))
		end if
		
		if not ifnull(request("Rule4")) then
			response.write "<br>"&trim(request("Rule4txt"))
		end if%>
	</span></td>
  </tr>
  <tr>
    <td nowrap><span class="style13">處罰主文</span></td>
    <td colspan="4"><span class="style13"><%=UPunishmentMainBody%></span></td>
  </tr>
   <tr>
    <td nowrap><span class="style13">裁決日期</span></td>
    <td colspan="4"><span class="style13">中華民國<%="　"&UJudeDate(0)%>年　<%=UJudeDate(1)%>月　<%=UJudeDate(2)%>日</span></td>
  </tr>
  <tr>
    <td nowrap><span class="style13">簡要理由</span></td>
    <td colspan="4"><span class="style13"><%=USimpleReson%></span></td>
  </tr>
  <tr>
    <td><div align="center"><span class="style13">附　　記</span></div></td>
    <td colspan="4" valign="top" nowrap><span class="style13">一、受處分人不服本裁決聲明異議者，得於收受裁決書之翌日起二十日內，<br>　　以司法狀紙提交本分局，轉送管轄地方法院。<br>
    二、聲明異議之書狀應載明本裁決書之日、字號及理由。<br>
    三、上開罰鍰逾期仍不繳納者，本分局將『道路交通管理處罰條例』第九十<br>　　條之二移送行政執行處強制執行。<br>
	四、『郵局劃撥』戶名：<%=Bank_BankName%>　<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;劃撥帳號：<%=bank_BankAccount%></span></td>
  </tr>
</table>
<br><br><br>
<hr>
<br><br><br><br>
<table width="635" border="0" cellpadding="0" cellspacing="0">
  <tr valign="bottom">
    <td colspan="3"><div align="center" class="style15">違反道路交通管理事件裁決書　行政文書</div></td>
  </tr>
  <tr>
    <td colspan="3"><div class="style16"><br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=DutyAddress%>(<%=DB_UnitTel%>)</div></td>
  </tr>
  <tr>
    <td><div align="right" class="style16"><br>郵遞區號：</div></td>
	<td><div align="left" class="style16"><%=trim(request("DriverZip"))%></div></td>
  </tr>
  <tr>
    <td><div align="right" class="style16">地　　址：</div></td>
	<td><div align="left" class="style16"><%=trim(request("DriverAddress"))%></div></td>
  </tr>
  <tr>
    <td><div align="right" class="style16">收&nbsp;件&nbsp;人：</div></td>
	<td><div align="left" class="style16"><%=trim(request("Driver"))%></div></td>
  </tr>
</table>
</body>
</html>
